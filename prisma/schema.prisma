generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Choice {
  id      Int      @id @default(autoincrement())
  choice1 String   @db.Char(255)
  choice2 String   @db.Char(255)
  Result  Result[]
}

model Result {
  id       Int    @id @default(autoincrement())
  choiceId Int
  winner   Int
  choice   Choice @relation(fields: [choiceId], references: [id])
}
